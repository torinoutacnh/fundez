@using Elect.Web.IUrlHelperUtils
@using TIGE.Core.Constants
@using TIGE.Core.Share.Constants
@using TIGE.Core.Share.Utils
@using TIGE.Models.Constants
@model TIGE.Core.Share.Models.WithdrawRequestModel
@{
    ViewData[ViewDataKey.Title] = Messages.Wallet.PageTitleUpdate;
    var status = new List<Enums.WithdrawStatus>();
    status.Add(Enums.WithdrawStatus.NewTransfer);
    status.Add(Enums.WithdrawStatus.ConfirmingTransfer);
    status.Add(Enums.WithdrawStatus.ApprovedTransfer);
    status.Add(Enums.WithdrawStatus.RejectTransfer);
    var selectlist = new SelectList(status);
}

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">
                Home
            </h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.Action("Transfer", "StackWallet", new {Area= "StackAdmin"})" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Transfer Management
                        </span>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.AbsoluteAction("EditTransfer", "StackWallet", new {id = Model.Id})" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Transfer Management
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon">
                        <i class="flaticon-users"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Transfer Deposit
                        <small>
                            
                        </small>
                    </h3>
                </div>
            </div>
        </div>
        <form id="edit-user-form" asp-controller="StackWallet" asp-action="SubmitEditTransfer" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
            <input asp-for="Id" type="hidden" />
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <label asp-for="AmountUSD" class="col-lg-2 col-form-label">Amount (TIGE)</label>
                    <div class="col-lg-3">
                        <input asp-for="AmountUSD" type="number" class="form-control m-input" readonly="readonly">
                        <span asp-validation-for="AmountUSD" class="form-control-feedback"></span>
                    </div>
                     <label asp-for="UserId" class="col-lg-2 col-form-label">User ID</label>
                    <div class="col-lg-3">
                        <input asp-for="UserId" type="number" class="form-control m-input" readonly="readonly">
                        <span asp-validation-for="UserId" class="form-control-feedback"></span>
                    </div>
                </div>
                @*<div class="form-group m-form__group row">
                     <label asp-for="FromWalletId" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="FromWalletId" type="number" class="form-control m-input" readonly="readonly">
                        <span asp-validation-for="FromWalletId" class="form-control-feedback"></span>
                    </div>

                     <label asp-for="ToAddressWallet" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="ToAddressWallet" type="number" class="form-control m-input" readonly="readonly">
                        <span asp-validation-for="ToAddressWallet" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                   
                    <label asp-for="TxHash" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="TxHash" type="text" class="form-control m-input" readonly="readonly">
                        <span asp-validation-for="TxHash" class="form-control-feedback"></span>
                    </div>
                </div>                    
*@                <div class="form-group m-form__group row">
                    <label asp-for="CreatedTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input value="@Model.CreatedTime" type="datetime" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control m-input" readonly="readonly">
                    </div>
                    
                    <label asp-for="Status" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <select asp-for="Status" class="form-control" data-plugins="select2" asp-items="selectlist"></select>
                        <span asp-validation-for="Status" class="form-control-feedback"></span>
                    </div>
                </div>
                
            </div>
            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-success" data-plugins="loader">
                                Save
                            </button>
                            <a href="@Url.Action("Transfer", "StackWallet", new { Area ="StackAdmin"})" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
