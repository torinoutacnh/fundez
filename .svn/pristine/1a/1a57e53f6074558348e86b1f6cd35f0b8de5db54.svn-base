@{
    Layout = "_AnonymousLayout";

    ViewData[ViewDataKey.Title] = Messages.Auth.PageTitleForgetPassword;
}

@model TIGE.Core.Models.Authentication.ForgetPasswordModel

<div class="m-stack m-stack--hor m-stack--desktop">
    <div class="m-stack__item m-stack__item--fluid">
        <div class="m-login__wrapper">
            <div class="m-login__logo">
                <a href="#">
                    <img src="~/img/favicon/android-chrome-192x192.png" alt="TIGE Logo" />
                </a>
            </div>
            <div class="m-login__signin">
                <div class="m-login__head">
                    <h3 class="m-login__title">
                        Forgotten Password ?
                    </h3>
                    <div class="m-login__desc">
                        Enter your email to reset your password:
                    </div>
                </div>

                <form class="m-login__form m-form" asp-controller="Auth" asp-action="SubmitForgetPassword" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
                    <div class="form-group m-form__group">
                        <input asp-for="Email" class="form-control m-input" placeholder="Email" />
                        <span asp-validation-for="Email" class="form-control-feedback"></span>
                    </div>

                    <div class="text-center" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" data-plugins="loader">
                            Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="m-stack__item m-stack__item--center">
        <div class="m-login__account">
            <span class="m-login__account-msg">
                You got your password ?
            </span>
            &nbsp;&nbsp;

            <a asp-action="SignIn" asp-controller="Auth" class="m-link m-link--focus m-login__account-link">
                Sign In
            </a>
        </div>
    </div>
</div>