@model ImageModel

@{
    ViewData[ViewDataKey.Title] = Messages.Image.PageTitleUpdate;
    
    var listProject = ViewBag.ProjectSelectList as List<SelectListItem>;
    var listCategory = ViewBag.CategorySelectList as List<SelectListItem>;
}

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">
                Images
            </h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.Action("Index", "Image")" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Images
                        </span>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.Action("Edit", "Image")" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Update Image
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon">
                        <i class="flaticon-file"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Update Image
                    </h3>
                </div>
            </div>
        </div>
        <form id="edit-image-form" asp-controller="Image" asp-action="SubmitEdit" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
            <input type="hidden" asp-for="Id" />
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <div class="col-lg-12 text-center">
                        @{
                            var url = Url.AbsoluteContent(PortalEndpoint.Image.DownloadEndpoint.Replace("{id}", Model.Id));
                        }
                        <a href="@url" target="_blank">
                            <img src="@url" alt="@Model.Name" style="max-height: 300px"/>
                        </a>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="ProjectId" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <select asp-for="ProjectId" class="form-control" asp-items="@listProject" data-plugins="select2"></select>
                        <span asp-validation-for="ProjectId" class="form-control-feedback"></span>
                    </div>
                    <label asp-for="CategoryIds" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <select asp-for="CategoryIds" class="form-control" asp-items="@listCategory" multiple="multiple" data-plugins="select2"></select>
                        <span asp-validation-for="CategoryIds" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="IsFeatured" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <label class="m-checkbox">
                            <input type="checkbox" asp-for="IsFeatured"><span></span>
                        </label>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="Name" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="Name" class="form-control m-input"/>
                        <span asp-validation-for="Name" class="form-control-feedback"></span>
                    </div>
                    <label asp-for="ContentLength" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="ContentLength" class="form-control m-input" disabled="disabled"/>
                        <span asp-validation-for="ContentLength" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="TotalAccess" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="TotalAccess" class="form-control m-input" disabled="disabled"/>
                        <span asp-validation-for="TotalAccess" class="form-control-feedback"></span>
                    </div>
                    <label asp-for="LastAccessTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="LastAccessTime" class="form-control m-input" disabled="disabled" value="@Model.LastAccessTime.ToString(Formattings.DateTimeFormat)"/>
                        <span asp-validation-for="LastAccessTime" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="ImageWidthPx" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="ImageWidthPx" class="form-control m-input" disabled="disabled"/>
                        <span asp-validation-for="ImageWidthPx" class="form-control-feedback"></span>
                    </div>
                    <label asp-for="ImageHeightPx" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="ImageHeightPx" class="form-control m-input" disabled="disabled"/>
                        <span asp-validation-for="ImageHeightPx" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="CreatedTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="CreatedTime" class="form-control m-input" disabled="disabled" value="@Model.CreatedTime.ToString(Formattings.DateTimeFormat)"/>
                        <span asp-validation-for="CreatedTime" class="form-control-feedback"></span>
                    </div>
                    <label asp-for="LastUpdatedTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="LastUpdatedTime" class="form-control m-input" disabled="disabled" value="@Model.LastUpdatedTime.ToString(Formattings.DateTimeFormat)"/>
                        <span asp-validation-for="LastUpdatedTime" class="form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-success" data-plugins="loader">
                                Save
                            </button>
                            <a href="@Url.Action("Index", "Image")" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
