                @{
                    @RenderBody()
                }
            </div>

            <div class="m-grid__item m-grid__item--fluid m-grid m-grid--center m-grid--hor m-grid__item--order-tablet-and-mobile-1	m-login__content" style="background-color: #261d35; background-image: url(@backgroundUrl)">
                <div class="m-grid__item m-grid__item--middle">
                    <h3 class="m-login__welcome">
                        FUNDEZ.CO System
                    </h3>
                    <p class="m-login__msg" id="qoute">
                        Không gian chỉ là khái niệm, Kiến trúc là vô tận
                    </p>
                </div>
            </div>
        </div>
    </div>
