@model TIGE.Core.Share.Models.User.ProfileModel

@{
    ViewData[ViewDataKey.Title] = Messages.User.PageTitleProfile;
}

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">
                Profile
            </h3>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon">
                        <i class="flaticon-users"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Profile
                        <small>
                            Cập Nhật Profile.
                        </small>
                    </h3>
                </div>
            </div>
        </div>
        <form id="edit-user-form" asp-controller="User" asp-action="SubmitEditProfile" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
            <input asp-for="Id" type="hidden"/>
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <label asp-for="Email" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="Email" type="email" class="form-control m-input" placeholder="Enter email" disabled="disabled"/>
                        <span asp-validation-for="Email" class="form-control-feedback"></span>
                    </div>

                    <label asp-for="ListPermission" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <select asp-for="ListPermission" class="form-control" data-plugins="select2" asp-items="Html.GetEnumSelectList<Permission>()" disabled="disabled"></select>
                        <span asp-validation-for="ListPermission" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="Phone" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="Phone" type="text" class="form-control m-input" placeholder="Enter phone" disabled="disabled"/>
                        <span asp-validation-for="Phone" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="FullName" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="FullName" type="text" class="form-control m-input" placeholder="Enter full name"/>
                        <span asp-validation-for="FullName" class="form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-success" data-plugins="loader">
                                Save
                            </button>
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>