@using Elect.Web.IUrlHelperUtils
@using TIGE.Core.Constants
@using TIGE.Core.Share.Utils
@using TIGE.Models.Constants
@model TIGE.Core.Share.Models.Stack.SubscriptionModel
@{
    ViewData[ViewDataKey.Title] = Messages.Wallet.PageTitleUpdate;
}

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="m-subheader__title m-subheader__title--separator">
                Home
            </h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item m-nav__item--home">
                    <a href="#" class="m-nav__link m-nav__link--icon">
                        <i class="m-nav__link-icon la la-home"></i>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.Action("Index", "StackSubscription", new {Area= "StackAdmin"})" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Description Management
                        </span>
                    </a>
                </li>
                <li class="m-nav__separator">
                    -
                </li>
                <li class="m-nav__item">
                    <a href="@Url.AbsoluteAction("Edit", "StackSubscription", new {id = Model.Id})" class="m-nav__link">
                        <span class="m-nav__link-text">
                            Update Description
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon">
                        <i class="flaticon-users"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Update Description
                        <small>
                            
                        </small>
                    </h3>
                </div>
            </div>
        </div>
        <form id="edit-user-form" asp-controller="StackSubscription" asp-action="SubmitEdit" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
            <input asp-for="Id" type="hidden" />
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <label asp-for="Day" class="col-lg-2 col-form-label">Day</label>
                    <div class="col-lg-3">
                        <input asp-for="Day" type="number" class="form-control m-input">
                        <span asp-validation-for="Day" class="form-control-feedback"></span>
                    </div>

                    <label asp-for="Reward" class="col-lg-2 col-form-label">Rate</label>
                    <div class="col-lg-3">
                        <input asp-for="Reward" type="number" class="form-control m-input">
                        <span asp-validation-for="Reward" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
         
                    <label asp-for="Description" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input asp-for="Description" type="text" class="form-control m-input">
                        <span asp-validation-for="Description" class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <label asp-for="CreatedTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input value="@Model.CreatedTime" type="datetime" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control m-input" readonly="readonly">
                    </div>
                    
                    <label asp-for="LastUpdatedTime" class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-3">
                        <input value="@Model.LastUpdatedTime" type="datetime" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control m-input" readonly="readonly">
                    </div>

                </div>                
            </div>
            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-success" data-plugins="loader">
                                Save
                            </button>
                            <a href="@Url.Action("Index", "StackSubscription", new { Area ="StackAdmin"})" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
