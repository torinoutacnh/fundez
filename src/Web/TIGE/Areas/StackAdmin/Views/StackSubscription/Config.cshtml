@model TIGE.Core.Models.Configuration.StackConfigurationModel;

@{
    ViewData["Title"] = "Cấu Hình Hệ Thống";
}

<style>
    .config-page .form-group {
        justify-content: space-between;
        width: 100%;
        align-items: center;
    }
    
</style>
<div class="container">

    <h2>SYSTEM CONFIGURATION</h2>
    <form asp-controller="StackSubscription" asp-action="UpdateConfig" asp-area="StackAdmin" method="post">
        <input type="hidden" asp-for="Id" />
        <hr />
        <div class="config-page">
            <div class="form-group m-form__group row">
                <label asp-for="WalletAddress" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="WalletAddress" type="text" class="form-control m-input" placeholder="About page">
                    <span asp-validation-for="WalletAddress" class="form-control-feedback"></span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                @*<label asp-for="AboutPage" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="AboutPage" type="text" class="form-control m-input" placeholder="About page">
                    <span asp-validation-for="AboutPage" class="form-control-feedback"></span>
                </div>
                <label asp-for="ContactAddress" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="ContactAddress" type="text" class="form-control m-input" placeholder="Contact Address">
                    <span asp-validation-for="ContactAddress" class="form-control-feedback"></span>
                </div>*@
            </div>
            <div class="form-group m-form__group row">
                <label asp-for="DepositAmount" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="DepositAmount" type="number" class="form-control m-input" placeholder="Deposit Amount">
                    <span asp-validation-for="DepositAmount" class="form-control-feedback"></span>
                </div>
                <label asp-for="MinWithDraw" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="MinWithDraw" type="number" class="form-control m-input" placeholder="Min WithDraw">
                    <span asp-validation-for="MinWithDraw" class="form-control-feedback"></span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label asp-for="MinTransfer" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="MinTransfer" type="number" class="form-control m-input" placeholder="Min Transfer">
                    <span asp-validation-for="MinTransfer" class="form-control-feedback"></span>
                </div>
                <label asp-for="MinStacking" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="MinStacking" type="number" class="form-control m-input" placeholder="Min Stacking">
                    <span asp-validation-for="MinStacking" class="form-control-feedback"></span>
                </div>
            </div>

            <div class="form-group m-form__group row">
                <label asp-for="MinWithDrawUSD" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="MinWithDrawUSD" type="number" class="form-control m-input" placeholder="">
                    <span asp-validation-for="MinWithDrawUSD" class="form-control-feedback"></span>
                </div>
                <label asp-for="SupportEmail" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="SupportEmail" type="email" class="form-control m-input" placeholder="Support Email">
                    <span asp-validation-for="SupportEmail" class="form-control-feedback"></span>
                </div>
            </div>

            <div class="form-group m-form__group row">
                <label asp-for="TelegramLink" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="TelegramLink" type="text" class="form-control m-input" placeholder="Telegram Link">
                    <span asp-validation-for="TelegramLink" class="form-control-feedback"></span>
                </div>
            </div>
            @*<div class="form-group m-form__group row">
                <label asp-for="TIGEChartRange" class="col-lg-4 col-form-label"></label>
                <div class="col-lg-6">
                    <input asp-for="TIGEChartRange" type="text" class="form-control m-input" placeholder="TIGEChart Range">
                    <span asp-validation-for="TIGEChartRange" class="form-control-feedback"></span>
                </div>
            </div>*@

            

            <div class="form-group m-form__group">

                <button class="btn btn-success">Save</button>
            </div>
        </div>
    </form>
</div>
    

